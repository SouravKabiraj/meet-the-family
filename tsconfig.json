{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "node"
    ],
    "outDir": "./build/out/",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
